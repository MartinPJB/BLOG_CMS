{#
  Name: list.html.twig
  Path: cuej/Back/templates/pages/Categories/list.html.twig

  Variables:
    - {@array} categories: Categories list to display:
      - {@object} category: Category to display:
        - {@string} name: Article name
#}
{% extends "index.html.twig" %}

{% block title %}Categories{% endblock %}

{% block content %}
  <h1>Categories</h1>
  <p>Here is the list of all the categories you've created.</p>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {# Display each category #}
      {% for category in categories %}
        <tr>
          <td>{{ category.name|raw }}</td>
          <td>{{ category.description|raw }}</td>
          <td class="flex flex-end flex-gap flex-center">
            <a href="admin/categories/edit/{{ category.id }}" title="Edit" class="btn"><i class="bi bi-gear-fill"></i></a>
            <a href="admin/categories/delete/{{ category.id }}" title="Delete" class="btn btn--danger"><i class="bi bi-trash3-fill"></i></a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="3">You haven't created any category.</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a href="admin/categories/create" class="btn btn--primary">Create a category</a>
{% endblock %}
