{# <div class="home-separator"></div>
<div class="home-separator--shadow"></div> #}

<section id="chapitres" class="chapters">
  {% if categories %}
  <nav class="selector" aria-label="Choix du chapitre">
    {# Display each categories #}
    {% for category in categories %}
    <h2 class="selector__chapter-name" data-category="{{ category.id }}">{{ category.name|raw }}</h2>
    <p class="selector__description" data-category="{{ category.id }}">{{ category.description|raw }}</p>
    {% endfor %}
    <div class="selector__path">
      <img class="selector__lechemin" src="public/front/img/svg/lechemin.svg" alt="">
      {% for category in categories %}
      <a class="selector__icon" data-category="{{ category.id }}">
        <img class="selector__icon-img" src="public/front/img/png/gif{{ category.id - 1 }}.png" alt="{{ category.name|raw }}">
      </a>
      {% endfor %}
    </div>
    <div class="selector__details">
      {% for category in categories %}
      <img class="selector__illustration" data-category="{{ category.id }}" src="public/front/img/jpg/illu_{{ category.id - 1 }}.jpg" alt="">
      {% endfor %}
    </div>
    {% for category in categories %}
    <img class="selector__background" data-category="{{ category.id }}" src="{{ category.image.path }}" alt="">
    {% endfor %}
  </nav>
  {% else %}
  <p>Créez une catégorie pour l'afficher ici.</p>
  {% endif %}
</section>

