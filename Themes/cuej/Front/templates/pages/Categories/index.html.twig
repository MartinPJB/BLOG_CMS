{% extends "index.html.twig" %}

{# Set title #}
{% block title %}Categories{% endblock %}

{# Set stylesheets #}
{% block stylesheets %}
<link rel="stylesheet" href="public/front/css/categories.css">
{% endblock %}

{# Set javascript #}
{% block javascript %}
<script src="public/front/js/home.js" type="module" defer></script>
{% endblock %}

{# Set content #}
{% block content %}
<section class="land">
  <h1>Titre du site</h1>
