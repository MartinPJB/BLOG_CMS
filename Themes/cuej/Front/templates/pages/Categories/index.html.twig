    {# Display each categories #}
    {% for category in categories %}
    <div class="selector__chapter-name">
      <h2>{{ category.name }}</h2>
    </div>
    <div class="selector__path">
      <img src="public/front/img/svg/" alt="">
      <a class="selector__icon" href="categories/see/{{ category.id }}">
