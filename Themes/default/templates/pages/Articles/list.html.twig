{#
  Nom: list.html.twig
  Path: default/templates/pages/Articles/list.html.twig

  Variables locales:
  - articles: Tableau contenant les différents articles créés
#}

{% extends 'base.html.twig' %}

{% block content %}

  <section>
    <h1>Articles</h1>
    {% for article in articles|sort((a, b) => date(a.date) - date(b.date)) %}
      {% set date = date(article.date) %}
      <article>
        <img src="{{ article.image }}" alt="{{ article.title }}">

        <div>
          <h2>{{ article.title }}</h2>
          <p>{{ article.description }}</p>

          <span>Publié le {{ date|date("d/m/Y", "Europe/Paris") }} - {{ date|date("H:i") }}</span>
        </div>

      </article>
    {% else %}
      <p>Aucun article n'a été publié.</p>
    {% endfor %}
  </section>

{% endblock %}