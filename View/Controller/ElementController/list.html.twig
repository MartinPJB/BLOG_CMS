{% extends 'base.element.html.twig' %}

{% block javascript %}
  <script src="./public/js/list.js" type="module" defer async></script>
{% endblock %}

{% block action_content %}

  {% for element in elements %}
    <{{ element.balise }}
      {% if element.css %}style="{{ element.css }}"{% endif %}
      {% if element.src %}src="{{ element.src }}"{% endif %}
      {% if element.alt %}alt="{{ element.alt }}"{% endif %}
      {% if element.href %}href="{{ element.href }}"{% endif %}

      {% if element.balise == "video" %}controls{% endif %}
      {% if element.balise == "audio" %}controls{% endif %}

      data-db_id="{{ element.id }}"
    >
    {{ element.text }}

    {% if element.balise == "video" or element.balise == "audio" %}
      <source src="{{ element.src }}" type="video/{{ element.balise == "video" ? "mp4" : "mp3" }}" />
    {% endif %}
    </{{ element.balise }}>
  {% endfor %}

{% endblock %}