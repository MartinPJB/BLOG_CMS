{% extends 'base.element.html.twig' %}

{% block stylesheet %}
  <link rel="stylesheet" href="./public/css/prism.css">
  <link rel="stylesheet" href="./public/css/prism-live.css">
{% endblock %}

{% block javascript %}
  <script src="./public/js/prism.js" type="module" defer async></script>
  <script src="./public/js/prism-live.js?load=css" type="module" defer async></script>
{% endblock %}

{% block action_content %}

  <form action="?route=element&article={{GET.article}}&action=add" method="post">
    <h1>Créer un nouvel élément</h1>
    <fieldset>
      <legend>Choisir une balise:</legend>
      <select name="balise" id="balise">
        {% for tag in tags %}
          <option value="{{ tag }}">{{ tag }}</option>
        {% endfor %}
      </select>
    </fieldset>

    <fieldset>
      <legend>Entrer un texte qui sera contenu dans la balise</legend>
      <textarea name="text" id="text" cols="30" rows="10" placeholder="Mon élément HTML!"></textarea>
    </fieldset>

    <fieldset>
      <legend>Entrer un css personnalisé (facultatif)</legend>
      <textarea class="prism-live line-numbers fill no-whitespace-normalization language-css" name="css" id="css" cols="30" rows="10" spellcheck="false">color: black;</textarea>
    </fieldset>

    <fieldset>
      <legend>Entrer un src personnalisé (facultatif)</legend>
      <span>Ne fonctionnera que sur les balises HTML qui prennent en compte cet attribut.</span>
      <input type="text" name="src" id="src" placeholder="https://placehold.co/600x400/EEE/31343C">
    </fieldset>

    <fieldset>
      <legend>Entrer un alt personnalisé (facultatif)</legend>
      <span>Ne fonctionnera que sur les balises HTML qui prennent en compte cet attribut.</span>
      <input type="text" name="alt" id="alt" placeholder="Mon image">
    </fieldset>

    <fieldset>
      <legend>Entrer un href personnalisé (facultatif)</legend>
      <span>Ne fonctionnera que sur les balises HTML qui prennent en compte cet attribut.</span>
      <input type="text" name="href" id="href" placeholder="https://www.google.fr">
    </fieldset>

    <input type="submit" name="add_submit" value="Ajouter">
  </form>
{% endblock %}